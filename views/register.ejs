<%- include('partials/_head.ejs'); %>

    <section>
        <h2>Please fill in the Registration Form:</h2>
        <form method="POST" action="/register">
            <label for="name-field">Name:</label>
            <input type="text" name="userName" id="name-field">
            <label for="favourite-language-field">Favourite Language:</label>
            <input type="text" name="userFavouriteLanguage" id="favourite-language-field">
            <label for="email-address-field">E-Mail:</label>
            <input type="email" name="userEmail" id="email-address-field">
            <label for="password-field">Password:</label>
            <input type="password" name="userPass" id="password-field">
            <input type="submit" value="Register">
        </form>
        <p>
            Already have an account?
            <a href="/">
                Click here to sign in.
            </a>
        </p>
    </section>

</body>
</html>